<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explore_frag">


    <view
        android:id="@+id/searchBoxBackground"
        class="com.google.android.material.bottomnavigation.BottomNavigationView"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:background="#6BC55D"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="255dp"
                android:layout_height="47dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/bg_explore_searchbox"
                android:ems="10"
                android:hint="Search"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableLeft="@drawable/ic_explore_search"
                android:drawablePadding="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </view>

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:gravity="fill"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBoxBackground">

        <view
            android:id="@+id/Restaurant"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_explore_items"
            app:elevation="10dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_restaurant" />

                <TextView
                    android:id="@+id/lbl_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="Restaurant" />
            </LinearLayout>

        </view>

        <view
            android:id="@+id/Shopping"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_explore_items"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_shoppingCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_shoppingcart" />

                <TextView
                    android:id="@+id/lbl_shoppingCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="Shopping" />
            </LinearLayout>
        </view>

        <view
            android:id="@+id/GasStation"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_explore_items"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_gasStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_gasstation" />

                <TextView
                    android:id="@+id/lbl_gasStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="Gas Station" />
            </LinearLayout>
        </view>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="fill"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstRow">

        <view
            android:id="@+id/Hotel"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_explore_items"
            app:elevation="10dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_hotel" />

                <TextView
                    android:id="@+id/lbl_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hotel"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

        </view>

        <view
            android:id="@+id/Parks"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_explore_items"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_parks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_parks" />

                <TextView
                    android:id="@+id/lbl_parks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Parks"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>
        </view>

        <view
            android:id="@+id/Health"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_explore_items"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_health"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_hospital" />

                <TextView
                    android:id="@+id/lbl_health"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Health"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>
        </view>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="fill"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondRow">

        <view
            android:id="@+id/Religion"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_explore_items"
            app:elevation="10dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_religion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_church" />

                <TextView
                    android:id="@+id/lbl_religion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Religion"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

        </view>

        <view
            android:id="@+id/schools"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_explore_items"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_schools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_schools" />

                <TextView
                    android:id="@+id/lbl_schools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Schools"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>
        </view>

        <view
            android:id="@+id/Tourists"
            class="com.google.android.material.bottomnavigation.BottomNavigationView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_explore_items"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="107dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tourists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_explore_tourists" />

                <TextView
                    android:id="@+id/lbl_tourists1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tourist"
                    android:textAlignment="center"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/lbl_tourists2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attractions"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>
        </view>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>